{
    "arrowParens": "avoid",
    "bracketSameLine": true,
    "htmlWhitespaceSensitivity": "ignore",
    "jsonRecursiveSort": true,
    "plugins": ["prettier-plugin-sort-json", "prettier-plugin-package"],
    "printWidth": 120,
    "semi": false,
    "singleAttributePerLine": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all"
}
